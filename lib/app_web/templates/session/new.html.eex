<%= render(AppWeb.SharedView, "back-navigation.html", conn: @conn, title: "Log in") %>
<div class="sub-container">

  <%= render(AppWeb.SharedView, "flash-messages.html", conn: @conn) %>
  
  <%= form_for @conn, Routes.session_path(@conn, :create), fn f -> %>
  <label>Email</label>
  <%= text_input f, :email, placeholder: "Enter your email.." %>
  <label>Password</label>
  <%= password_input f, :password, placeholder: "Enter your password.." %>
  <%= submit "Log in" %>
  <% end %>
  <p class="center">No account yet? <%= link "Create account.", to: Routes.user_account_path(@conn, :new) %></p>
</div>


